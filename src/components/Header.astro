---
import Box from "./Box.astro";
import HeaderNavItem, { TRANSITION } from "./HeaderNavItem.astro";
import { vars } from "../vars.css";
import { MoonIcon, SunIcon } from "@radix-ui/react-icons";
import MobileHeader from "./MobileHeader.astro";
---

<MobileHeader />
<Box as="nav" display={{ _: "none", sm: "flex" }} gap="$4">
  <HeaderNavItem href="/">Home</HeaderNavItem>
  <HeaderNavItem href="/blog">Blog</HeaderNavItem>
  <HeaderNavItem href="/projects">Projects</HeaderNavItem>
  <HeaderNavItem href="/uses">/uses</HeaderNavItem>
  <Box
    transition={TRANSITION}
    as="button"
    borderRadius="$md"
    p="$1"
    bg={{ _: "$gray4", hover: "$gray6" }}
    border={`2px solid ${vars.colors.gray6}`}
    size="32px"
    display="flex"
    placeItems="center"
    ml="auto"
    id="themeToggle"
  >
    <MoonIcon className="moon" />
    <SunIcon className="sun" />
  </Box>
</Box>

<style>
  .sun {
    display: none;
  }
  .moon {
    display: block;
  }

  :global(.dark) .sun {
    display: block;
  }
  :global(.dark) .moon {
    display: none;
  }
</style>

<script is:inline>
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }
    return "light";
  })();

  if (theme === "light") {
    document.documentElement.classList.remove("dark");
  } else {
    document.documentElement.classList.add("dark");
  }

  window.localStorage.setItem("theme", theme);

  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle("dark");

    const isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
  };

  document
    .getElementById("themeToggle")
    .addEventListener("click", handleToggleClick);
</script>
