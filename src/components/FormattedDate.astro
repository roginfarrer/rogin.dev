---
interface Props {
  date: Date;
  updatedDate?: boolean;
}

const { date, updatedDate } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(
      "en-us",
      updatedDate
        ? { year: "numeric", month: "long" }
        : {
            year: "numeric",
            month: "short",
            day: "numeric",
          },
    )
  }
</time>
