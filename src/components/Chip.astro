---
import { vars } from "../vars.css";
import Box, { type Props as BoxProps } from "./Box.astro";
import type { IconDefinition } from "@fortawesome/free-solid-svg-icons";
import Icon from "./Icon.astro";

export interface ChipProps {
  icon: IconDefinition;
  iconColor?: BoxProps<any>["color"];
}

const { icon, iconColor } = Astro.props;
---

<Box
  display="flex"
  gap="$2"
  borderRadius="50vw"
  alignItems="center"
  border={`1px solid ${vars.colors.gray7}`}
  py="$1"
  px="$2"
  typeScale="$sm"
>
  <Icon
    data-chip-icon={icon.iconName}
    icon={icon}
    color={iconColor}
    size="15px"
  />
  <slot />
</Box>
