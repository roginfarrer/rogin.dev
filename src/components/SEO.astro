---
import { SEO as AstroSEO, type Props as AstroSEOProps } from "astro-seo";

interface Props extends Pick<AstroSEOProps, "title" | "openGraph"> {
  twitter?: Omit<AstroSEOProps["twitter"], "creator">;
  description?: string;
}

const props = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<AstroSEO
  titleDefault="Rogin Farrer"
  titleTemplate="%s - Rogin Farrer"
  twitter={{ creator: "@roginfarrer", title: props.title }}
  title={props.title}
  openGraph={{
    ...props.openGraph,
    optional: {
      locale: "en_US",
      siteName: "Rogin Farrer",
      description: props.description,
    },
    basic: {
      url: canonicalURL,
      title: props.title!,
      type: canonicalURL.toString().includes("blog") ? "artical" : "website",
    },
  }}
/>
