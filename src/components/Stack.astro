---
import Box from "./Box.astro";
import type { Sprinkles } from "./Box.css";

type Props = Omit<Sprinkles, "flex" | "flexDirection"> & {
  dir?: "h" | "v";
};

const { dir = "v", ...props } = Astro.props;
---

<Box display="flex" flexDirection={dir === "v" ? "column" : "row"} {...props}>
  <slot />
</Box>
