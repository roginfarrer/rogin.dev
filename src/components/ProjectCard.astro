---
import Icon from "./Icon.astro";
import Badge from "./Badge.astro";
import { faStar } from "@fortawesome/free-solid-svg-icons";
import { box } from "../box";
import Card from "./Card.astro";
import { ArrowUpRight } from "lucide-solid";

const { title, href, desc, repo, emoji, tags = [] } = Astro.props;

type Props = {
  title: string;
  href: string;
  desc: string;
  repo: string;
  emoji: string;
  tags: string[];
};
---

<Card
  href={href}
  desc={desc}
  data-project-card-repo={repo}
  {...box({ minHeight: { _: "250px", md: "275px" } })}
>
  <span
    slot="title"
    {...box({ display: "flex", justifyContent: "space-between" })}
  >
    <span>
      <span
        {...box(
          {
            mixBlendMode: "normal",
            typeScale: "$2xl",
            display: "block",
          },
          { style: { isolation: "isolate" } },
        )}>{emoji}</span
      >
      {title}
    </span>
    <ArrowUpRight strokeWidth="1" />
  </span>
  {
    tags.length > 0 && (
      <span {...box({ display: "flex", gap: "$2" })}>
        {tags.map((tag) => (
          <Badge>{tag}</Badge>
        ))}
      </span>
    )
  }
  <span
    {...box({ display: "flex", alignItems: "center", gap: "$2", mt: "auto" })}
  >
    <Icon icon={faStar} size="1em" />
    <span class="project-card-stars">0</span>
  </span>
</Card>
