---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";
import "@fontsource-variable/karla";
import "@fontsource-variable/bitter";
import "@fontsource-variable/karla";
import "@fontsource-variable/inter";
import "@fontsource-variable/crimson-pro";
import "@fontsource-variable/space-grotesk";

interface BaseProps {
  title?: string;
  description?: string;
  image?: never;
  imageAlt?: never;
}

interface ImageProps {
  title?: string;
  description?: string;
  image: string;
  imageAlt: string;
}

type Props = BaseProps | ImageProps;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image, imageAlt } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href="/bitmoji.ico" />
<meta name="generator" content={Astro.generator} />
<link rel="sitemap" href="/sitemap-index.xml" />
<!-- @ts-ignore -->
<meta
  name="impact-site-verification"
  value="a10ba962-d058-433a-9d56-781cd5b94a99"
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<script is:inline src="/settings-init.js"></script>

<SEO
  titleDefault="Rogin Farrer"
  titleTemplate="%s | Rogin Farrer"
  twitter={{
    creator: "@roginfarrer",
    title,
    description,
    card: image ? "summary_large_image" : "summary",
    site: "@roginfarrer",
    image,
    imageAlt,
  }}
  {...image
    ? {
        openGraph: {
          basic: {
            title: title ? `${title} | Rogin Farrer` : "Rogin Farrer",
            type: canonicalURL.toString().includes("blog")
              ? "article"
              : "website",
            url: canonicalURL.toString(),
            image,
          },
        },
      }
    : {}}
/>

<ViewTransitions />
