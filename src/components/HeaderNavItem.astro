---
import Box from "./Box.astro";

const { href } = Astro.props;
export const TRANSITION = ".15s background-color ease";
const isActive = Astro.url === href;
---

<Box
  as="a"
  href={href}
  fontWeight={isActive ? "$bolder" : undefined}
  bg={{ hover: "$gray5" }}
  borderRadius="$md"
  px="$3"
  py="$1"
  color="$gray12"
  transition={TRANSITION}
  style={{ mixBlendMode: "luminosity" }}
>
  <slot />
</Box>
